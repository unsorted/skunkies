{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "es2017"],
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "test-utils": ["config/jest/test-utils"],
      "@/core/*": ["src/core/*"],
      "@/infra/*": ["src/infra/*"],
      "@/config/*": ["src/config/*"],
      "@/features/*": ["src/features/*"],
      "@/assets/*": ["src/assets/*"],
      "@/public/*": ["public/*"],
      "@/components/*": ["src/components/*"],
      "@/pages/*": ["src/pages/*"]
    }
  },
  "exclude": ["dist", ".next", "out", "docs", "public", "coverage"],
  "include": ["next-env.d.ts", "**/*.json", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
}
