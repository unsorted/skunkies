{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "es2017"],
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "test-utils": ["config/jest/test-utils"],
      "_core/*": ["src/core/*"],
      "_infra/*": ["src/infra/*"],
      "_config/*": ["src/config/*"],
      "_features/*": ["src/features/*"],
      "_assets/*": ["src/assets/*"],
      "_public/*": ["public/*"],
      "_components/*": ["src/components/*"],
      "_pages/*": ["src/pages/*"]
    }
  },
  "exclude": ["dist", ".next", "out", "docs", "public", "coverage"],
  "include": ["next-env.d.ts", "**/*.json", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
}
